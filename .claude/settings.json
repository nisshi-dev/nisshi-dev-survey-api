{
  "includeCoAuthoredBy": true,
  "permissions": {
    "allow": [
      "Bash(npm install)",
      "Bash(npm run dev)",
      "Bash(npm run build*)",
      "Bash(npm run test)",
      "Bash(npm run test:*)",
      "Bash(npm run db:*)",
      "Bash(npm run generate*)",
      "Bash(gh *)",
      "Bash(git status*)",
      "Bash(git push*)",
      "Bash(git fetch*)",
      "Bash(git log*)",
      "Bash(git diff*)",
      "Bash(git merge-base*)",
      "Bash(git branch*)",
      "Bash(git add*)",
      "Bash(git commit*)",
      "Bash(pkill:*)",
      "Bash(find:*)",
      "WebFetch",
      "WebSearch",
      "Read(./.env.example)",
      "Edit(./.env.example)",
      "Write(./.env.example)"
    ],
    "deny": [
      "Bash(sudo:*)",
      "Bash(git reset:*)",
      "Bash(git rebase:*)",
      "Read(./.env)",
      "Read(./.env.*)",
      "Write(./.env)",
      "Write(./.env.*)",
      "Edit(./.env)",
      "Edit(./.env.*)",
      "Write(**/secrets/**)",
      "Bash(wget:*)",
      "Bash(rm -rf /)",
      "Bash(rm -rf ~)",
      "Bash(rm -rf ~/*)",
      "Bash(rm -rf /*)"
    ],
    "defaultMode": "acceptEdits"
  },
  "enableAllProjectMcpServers": true,
  "enabledPlugins": {
    "github@claude-plugins-official": true,
    "typescript-lsp@claude-plugins-official": true,
    "vercel@claude-plugins-official": true,
    "code-review@claude-plugins-official": true,
    "security-guidance@claude-plugins-official": true,
    "pr-review-toolkit@claude-plugins-official": true,
    "explanatory-output-style@claude-plugins-official": true,
    "code-simplifier@claude-plugins-official": true,
    "example-skills@anthropic-agent-skills": true
  }
}
