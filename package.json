{
  "name": "nisshi-dev-survey-api",
  "type": "module",
  "private": true,
  "engines": {
    "node": "24.x"
  },
  "devEngines": {
    "runtime": {
      "name": "node",
      "version": "24.x",
      "onFail": "warn"
    },
    "packageManager": {
      "name": "npm",
      "version": "11.x",
      "onFail": "warn"
    }
  },
  "scripts": {
    "postinstall": "prisma generate",
    "dev": "wrangler dev",
    "deploy": "wrangler deploy --minify",
    "generate:openapi": "tsx scripts/generate-openapi.ts",
    "test": "vitest",
    "test:run": "vitest run",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:seed": "prisma db seed",
    "check": "ultracite check",
    "fix": "ultracite fix"
  },
  "dependencies": {
    "@hono/standard-validator": "0.2.2",
    "@hono/swagger-ui": "0.5.3",
    "@prisma/adapter-pg": "7.4.0",
    "@prisma/client": "7.4.0",
    "@react-email/components": "1.0.7",
    "@valibot/to-json-schema": "1.5.0",
    "hono": "4.11.9",
    "hono-openapi": "1.2.0",
    "pg": "8.18.0",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "resend": "6.9.2",
    "valibot": "1.2.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.4.2",
    "@cloudflare/workers-types": "4.x",
    "@types/node": "24.x",
    "@types/pg": "8.16.0",
    "@types/react": "19.2.x",
    "prisma": "7.4.0",
    "tsx": "4.x",
    "typescript": "5.x",
    "ultracite": "7.2.3",
    "vitest": "4.0.18",
    "wrangler": "4.66.0"
  }
}
